  <%-include(`header`)-%>
  

  <div class="text-center center-div" id="login">
    <div class="container w-25 custom-width-height border py-5">
        <div class="title pb-1" >
            <h2 class="font-weight-bold">Login System</h2>
            <% if(locals.logout){%>
                <div class="alert alert-success text-center">
                    <%= logout %>
                </div>
                <%}%>
            
        </div>
        <form action="/route/login" method="POST" class="pt-3">
            <div class="form-group ">
                <input type="email" class="form-control" placeholder="email" name="email">
               
            </div>
            <div class="form-group mt-3">
                <input type="password" class="form-control" placeholder="password" name="password">
            </div>
            <button type="submit" class="btn btn-success rounded-pill mt-3 ">Submit</button>
        </form>
    </div>
  </div>


    <%-include(`footer`)-%>
